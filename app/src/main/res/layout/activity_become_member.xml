<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.km.rmbank.module.main.personal.member.BecomeMemberActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/btn_confirm">

        <TextView
            android:id="@+id/certifyIDCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/certifyIDCardHint"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeContent"
            android:paddingLeft="@dimen/viewSpace16"
            android:paddingRight="@dimen/viewSpace16"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="#f91413"
            android:onClick="certifyIDCard"
            />
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:clipChildren="false"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    >
                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="33dp"
                        android:clipChildren="false"
                        android:layout_marginRight="33dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        >
                    </android.support.v4.view.ViewPager>

                </FrameLayout>


                <WebView
                    android:id="@+id/memberIntroduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/viewSpace16"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>



    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolBarHeight"
        android:text="立即开通"
        android:textSize="@dimen/textSizeHuge"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/shape_become_member_btn_background"
        android:layout_alignParentBottom="true"
        android:onClick="confirmToPay"
        />

</RelativeLayout>
