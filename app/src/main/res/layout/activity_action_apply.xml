<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/divideLineColor"
    tools:context="com.km.rmbank.module.main.club.ActionApplyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/viewSpace8"
        android:layout_marginLeft="@dimen/viewSpace32"
        android:layout_marginRight="@dimen/viewSpace32"
        android:layout_marginTop="@dimen/viewSpace32"
        android:layout_marginBottom="@dimen/viewSpace8"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓  名"
            android:textSize="15dp"
            android:layout_marginLeft="@dimen/viewSpace8"
            android:layout_marginRight="@dimen/viewSpace8"
            android:layout_marginTop="@dimen/viewSpace4"
            android:layout_marginBottom="@dimen/viewSpace4"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/viewSpace8"
        android:layout_marginLeft="@dimen/viewSpace32"
        android:layout_marginRight="@dimen/viewSpace32"
        android:layout_marginTop="@dimen/viewSpace8"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="15dp"
            android:layout_marginLeft="@dimen/viewSpace8"
            android:layout_marginRight="@dimen/viewSpace8"
            android:layout_marginTop="@dimen/viewSpace4"
            android:layout_marginBottom="@dimen/viewSpace4"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="phone"
            android:maxLength="11"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/viewSpace64"
        android:layout_marginRight="@dimen/viewSpace64"
        android:layout_marginTop="@dimen/viewSpace32"
        android:background="?attr/colorAccent"
        android:text="立即报名"
        android:textColor="@color/white"
        android:textStyle="bold"/>


</LinearLayout>
