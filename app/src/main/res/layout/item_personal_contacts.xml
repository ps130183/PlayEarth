<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personContent"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingTop="13dp">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/check_personal_contacts"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/checkbox">

        <TextView
            android:id="@+id/nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名 #1"
            android:textColor="@color/text_color_block1"
            android:textSize="15sp"
            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_phone"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:id="@+id/personPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13987283429\n12321313242"
                android:textColor="@color/text_color_block3"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.3"
                />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已邀请"
        android:textSize="@dimen/textSizeContent"
        android:textColor="@color/text_color_block3"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/viewSpace16"
        android:visibility="gone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divideLineHeight"
        android:background="@color/divide_color"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>