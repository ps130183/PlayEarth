<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingTop="13dp"
    android:paddingBottom="13dp"
    android:paddingRight="30dp">

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已被别人绑定"
        android:textSize="14sp"
        android:textColor="@color/text_color_blue2"
        android:layout_gravity="right"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/check_personal_contacts"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/status">

        <TextView
            android:id="@+id/nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名 #1"
            android:textColor="@color/text_color_block1"
            android:textSize="15sp"
            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_phone"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:id="@+id/personPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13987283429\n12321313242"
                android:textColor="@color/text_color_block3"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.3"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>