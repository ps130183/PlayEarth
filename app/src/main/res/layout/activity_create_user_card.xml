<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/viewSpace16"
        tools:context="com.km.rmbank.module.main.card.CreateUserCardActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/viewSpace8"
            android:layout_marginBottom="@dimen/viewSpace8">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="头像"
                style="@style/TextBig"
                />

            <ImageView
                android:id="@+id/userPortrait"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/viewSpace8"
                android:background="@drawable/shape_user_card_board"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/viewSpace8"
            android:layout_marginBottom="@dimen/viewSpace8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*"
                    android:gravity="center"
                    android:textSize="@dimen/textSizeBig"
                    android:textColor="@color/textRedColor"
                    android:layout_marginRight="@dimen/viewSpace8"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    style="@style/TextBig"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/viewSpace8"
                android:layout_marginTop="@dimen/viewSpace8"
                android:background="@drawable/shape_user_card_board"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/viewSpace8"
            android:layout_marginBottom="@dimen/viewSpace8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*"
                    android:gravity="center"
                    android:textSize="@dimen/textSizeBig"
                    android:textColor="@color/textRedColor"
                    android:layout_marginRight="@dimen/viewSpace8"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="电话"
                    style="@style/TextBig"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/userPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/viewSpace8"
                android:textColor="@color/textSecondColor"
                android:layout_marginTop="@dimen/viewSpace8"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/shape_user_card_board"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/viewSpace8"
            android:layout_marginBottom="@dimen/viewSpace8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*"
                    android:gravity="center"
                    android:textSize="@dimen/textSizeBig"
                    android:textColor="@color/textRedColor"
                    android:layout_marginRight="@dimen/viewSpace8"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="职务"
                    style="@style/TextBig"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/userPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/viewSpace8"
                android:layout_marginTop="@dimen/viewSpace8"
                android:background="@drawable/shape_user_card_board"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/viewSpace8"
            android:layout_marginBottom="@dimen/viewSpace8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*"
                    android:gravity="center"
                    android:textSize="@dimen/textSizeBig"
                    android:textColor="@color/textRedColor"
                    android:layout_marginRight="@dimen/viewSpace8"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    style="@style/TextBig"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/userAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/viewSpace8"
                android:layout_marginTop="@dimen/viewSpace8"
                android:maxLines="2"
                android:background="@drawable/shape_user_card_board"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/viewSpace8"
            android:layout_marginBottom="@dimen/viewSpace8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*"
                    android:gravity="center"
                    android:textSize="@dimen/textSizeBig"
                    android:textColor="@color/textRedColor"
                    android:layout_marginRight="@dimen/viewSpace8"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="座右铭（个性签名）"
                    style="@style/TextBig"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/userIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/viewSpace8"
                android:layout_marginTop="@dimen/viewSpace8"
                android:background="@drawable/shape_user_card_board"/>
        </LinearLayout>



    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

