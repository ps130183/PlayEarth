<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/viewSpace16"
    android:paddingRight="@dimen/viewSpace16"
    android:paddingTop="@dimen/viewSpace8"
    android:paddingBottom="@dimen/viewSpace8"
    android:background="@color/white"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_portrait"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cardCornerRadius="15dp">
        <ImageView
            android:id="@+id/iv_protrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小宝哥"
        android:layout_toRightOf="@+id/card_portrait"
        android:layout_marginLeft="@dimen/viewSpace8"
        android:layout_alignBottom="@+id/card_portrait"
        android:layout_marginBottom="@dimen/viewSpace8"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2017-02-11"
        android:layout_alignBottom="@id/tv_shop_name"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_portrait"
        android:layout_marginTop="@dimen/viewSpace4"
        android:text="看到商品后我的心凌乱了，这他妈是什么东西，吃一次我就上瘾了，你说海参长得跟他妈大象似的有意思吗？"
        />
</RelativeLayout>