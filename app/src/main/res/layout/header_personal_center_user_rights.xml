<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="141dp"
    android:background="@color/white"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/click1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15dp">
            
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/icon_personal_center_1"
                android:layout_gravity="center_vertical"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赚球票"
                    android:textSize="@dimen/textSizeBig"
                    android:textColor="@color/text_color_block24"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多任务|多福利"
                    android:textSize="13sp"
                    android:textColor="@color/text_color_blocka"
                    />

            </LinearLayout>
            
        </LinearLayout>

        <View
            android:layout_width="@dimen/divideLineHeight"
            android:layout_height="match_parent"
            android:background="@color/divide_color"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />

        <LinearLayout
            android:id="@+id/click2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/icon_personal_center_2"
                android:layout_gravity="center_vertical"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIP会员"
                        android:textSize="@dimen/textSizeBig"
                        android:textColor="@color/text_color_block24"
                        android:layout_alignParentBottom="true"
                        />

                    <ImageView
                        android:id="@+id/realNameStatus"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/icon_personal_center_warning"
                        android:layout_toRightOf="@+id/vip"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="立即开通获取特权"
                    android:textSize="13sp"
                    android:textColor="@color/text_color_blocka"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/_default_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/click3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/icon_personal_center_3"
                android:layout_gravity="center_vertical"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看次数"
                    android:textSize="@dimen/textSizeBig"
                    android:textColor="@color/text_color_block24"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免费找客户"
                    android:textSize="13sp"
                    android:textColor="@color/text_color_blocka"
                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="@dimen/divideLineHeight"
            android:layout_height="match_parent"
            android:background="@color/divide_color"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />

        <LinearLayout
            android:id="@+id/click4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/icon_personal_center_4"
                android:layout_gravity="center_vertical"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的账户"
                    android:textSize="@dimen/textSizeBig"
                    android:textColor="@color/text_color_block24"
                    />
                <TextView
                    android:id="@+id/userBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动报名 | 提现"
                    android:textSize="13sp"
                    android:textColor="@color/text_color_blocka"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>