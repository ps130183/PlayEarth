<com.andview.refreshview.XRefreshView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/xRefreshView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.km.rmbank.module.main.fragment.home.ClubFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.youth.banner.Banner
                android:id="@+id/banner"
                app:banner_layout="@layout/banner_pilaster_side"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:focusable="true"
                android:focusableInTouchMode="true">

            </com.youth.banner.Banner>

            <include layout="@layout/_default_divide_line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/viewSpace16">

                <ImageView
                    android:id="@+id/recommend"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@mipmap/icon_recommend_1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐俱乐部"
                    android:layout_toRightOf="@+id/recommend"
                    android:layout_centerVertical="true"
                    style="@style/TextTitle"
                    />

                <TextView
                    android:id="@+id/allClub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部俱乐部  >"
                    style="@style/TextSmall"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/viewSpace8">
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="@dimen/viewSpace8"
                    android:layout_marginRight="@dimen/viewSpace8">

                    <com.ps.glidelib.GlideImageView
                        android:id="@+id/iv_recommendClub1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/tv_recommendClub1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/textSizeSmall"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/viewSpace4"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="@dimen/viewSpace8"
                    android:layout_marginRight="@dimen/viewSpace8">

                    <com.ps.glidelib.GlideImageView
                        android:id="@+id/iv_recommendClub2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/tv_recommendClub2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/textSizeSmall"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/viewSpace4"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_clubs"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



</com.andview.refreshview.XRefreshView>
