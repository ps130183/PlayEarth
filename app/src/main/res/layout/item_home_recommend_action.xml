<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingLeft="14dp">

    <com.ps.glidelib.GlideImageView
        android:id="@+id/contentImage"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        app:siv_radius="4dp"
        />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divideLineHeight0.5"
        android:background="#e8e8e8"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/contentImage"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/contentImage"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/actionName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="玩转地球海上资本之旅"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_block1"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/actionTime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="举办时间：2018-04-07"
            android:gravity="top"
            android:textColor="@color/text_color_blocka"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="bottom">

            <TextView
                android:id="@+id/appliedPersonNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="#3285ff"
                android:textSize="12sp"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人已报名"
                android:textColor="#888888"
                android:textSize="12sp"
                />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>