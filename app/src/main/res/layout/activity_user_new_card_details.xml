<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.km.rmbank.module.main.card.UserNewCardDetailsActivity">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.ps.glidelib.GlideImageView
                android:id="@+id/userPortrait"
                android:layout_width="match_parent"
                android:layout_height="260dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="玩小球"
                    android:textSize="25sp"
                    android:textColor="@color/text_color_block1"
                    android:paddingLeft="25dp"
                    android:paddingTop="35dp"
                    />

                <LinearLayout
                    android:id="@+id/ll_real_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/userName"
                    android:layout_alignBottom="@+id/userName"
                    android:background="@drawable/shape_real_name_1"
                    android:paddingLeft="@dimen/viewSpace4"
                    android:paddingRight="@dimen/viewSpace4"
                    android:paddingTop="@dimen/viewSpace2"
                    android:paddingBottom="@dimen/viewSpace2"
                    android:layout_marginLeft="@dimen/viewSpace8"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/iv_real_name"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@mipmap/icon_real_name_1" />

                    <TextView
                        android:id="@+id/tv_real_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已实名"
                        android:textSize="12sp"
                        android:textColor="@color/text_color_blue2"/>
                </LinearLayout>
            </RelativeLayout>


            <TextView
                android:id="@+id/userCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="玩转地球商旅学苑（北京）文化发展有限公司"
                android:textSize="16sp"
                android:textColor="@color/text_color_block1"
                android:background="@color/white"
                android:paddingLeft="25dp"
                android:paddingTop="35dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="23dp"
                android:paddingBottom="35dp">

                <TextView
                    android:id="@+id/userPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UI设计"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_block1"
                    android:paddingLeft="25dp" />

            </RelativeLayout>

            <com.ruffian.library.RTextView
                android:id="@+id/rtPartTimeJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="兼任"
                android:textSize="16sp"
                android:textColor="@color/text_color_block1"
                android:padding="@dimen/viewSpace16"
                app:background_normal="@color/white"
                app:icon_height="20dp"
                app:icon_width="20dp"
                app:icon_src_normal="@mipmap/icon_triangle_blue_right"
                android:layout_marginTop="@dimen/viewSpace16"
                />

            <View
                android:id="@+id/linePartTimeJob"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divideLineHeight"
                android:background="@color/divide_color"/>

            <com.ps.mrcyclerview.MRecyclerView
                android:id="@+id/partTimeJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="25dp">

            </com.ps.mrcyclerview.MRecyclerView>

            <com.ruffian.library.RTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="名片信息"
                android:textSize="16sp"
                android:textColor="@color/text_color_block1"
                android:padding="@dimen/viewSpace16"
                app:background_normal="@color/white"
                app:icon_height="20dp"
                app:icon_width="20dp"
                app:icon_src_normal="@mipmap/icon_triangle_blue_right"
                android:layout_marginTop="@dimen/viewSpace16"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divideLineHeight"
                android:background="@color/divide_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingLeft="25dp"
                android:paddingTop="25dp"
                android:paddingBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机"
                        android:textSize="15sp"
                        android:textColor="@color/text_color_block24"
                        android:layout_marginRight="20dp"
                        />

                    <TextView
                        android:id="@+id/userPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13567876289"
                        android:textSize="15sp"
                        android:textColor="@color/text_color_blocka"
                        android:layout_marginRight="15dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="行业"
                        android:textSize="15sp"
                        android:textColor="@color/text_color_block24"
                        android:layout_marginRight="20dp"
                        />

                    <TextView
                        android:id="@+id/userIndustry"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:text="互联网产品|平台"
                        android:textColor="@color/text_color_blocka"
                        android:textSize="15sp" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱"
                        android:textSize="15sp"
                        android:textColor="@color/text_color_block24"
                        android:layout_marginRight="20dp"
                        />

                    <TextView
                        android:id="@+id/userEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2341213213@qq.com"
                        android:textSize="15sp"
                        android:textColor="@color/text_color_blocka"
                        android:layout_marginRight="15dp"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址"
                        android:textSize="15sp"
                        android:textColor="@color/text_color_block24"
                        android:layout_marginRight="20dp"
                        />

                    <TextView
                        android:id="@+id/userAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京市左安门内大街左安溪园甲2-9玩转地球商旅学苑"
                        android:textSize="15sp"
                        android:textColor="@color/text_color_blocka"
                        android:layout_marginRight="15dp"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="签名"
                        android:textSize="15sp"
                        android:textColor="@color/text_color_block24"
                        android:layout_marginRight="20dp"
                        />

                    <TextView
                        android:id="@+id/userIntroduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我就是我 不一样的烟火"
                        android:textSize="15sp"
                        android:textColor="@color/text_color_blocka"
                        android:layout_marginRight="15dp"
                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/supplyAndDemand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/viewSpace16">
                <com.ruffian.library.RTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="供应与需求"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_block1"
                    android:padding="@dimen/viewSpace16"
                    app:background_normal="@color/white"
                    app:icon_height="20dp"
                    app:icon_width="20dp"
                    app:icon_src_normal="@mipmap/icon_triangle_blue_right"

                    />
                <include layout="@layout/_default_divide_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="供应"
                            android:textSize="15sp"
                            android:textColor="@color/text_color_block24"
                            android:layout_marginRight="20dp"/>

                        <com.ps.mrcyclerview.MRecyclerView
                            android:id="@+id/supplyRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dividerWidth="5"
                            app:dividerColor="@color/white">

                        </com.ps.mrcyclerview.MRecyclerView>

                    </LinearLayout>

                    <include layout="@layout/_default_divide_line"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="需求"
                            android:textSize="15sp"
                            android:textColor="@color/text_color_block24"
                            android:layout_marginRight="20dp"/>

                        <com.ps.mrcyclerview.MRecyclerView
                            android:id="@+id/demandRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dividerWidth="5"
                            app:dividerColor="@color/white">

                        </com.ps.mrcyclerview.MRecyclerView>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    <com.ruffian.library.RTextView
        android:id="@+id/myAutobiography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的\n自传"
        android:textSize="15sp"
        android:textColor="@color/white"
        app:background_normal="@color/colorAccent"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        app:corner_radius_top_left="35dp"
        app:corner_radius_bottom_left="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:onClick="openMyAutobiography"
        android:visibility="gone"
        />
</RelativeLayout>

