<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.km.rmbank.module.main.payment.PayContractsOrderSuccessActivity">

    <TextView
        android:id="@+id/becomeMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/memberHint"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeContent"
        android:paddingLeft="@dimen/viewSpace16"
        android:paddingRight="@dimen/viewSpace16"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="#f91413"
        android:onClick="becomeMember"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/icon_success"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付成功"
        android:textSize="@dimen/textSizeHuge"
        android:textColor="@color/text_color_block1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/viewSpace16"
        />

    <TextView
        android:id="@+id/hintContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="已将2名用户绑定到您的名下，可在我的团队里进行查看~"
        android:padding="@dimen/viewSpace32"
        android:textColor="@color/text_color_block5"
        android:textSize="@dimen/textSizeContent"
        android:lineSpacingMultiplier="1.3"
        android:gravity="center"
        />

</LinearLayout>
