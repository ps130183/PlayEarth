<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swiper_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_sold_out"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/color_red"
        android:gravity="center"
        android:text="下架"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_goods_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/viewSpace16"
            android:layout_marginLeft="@dimen/viewSpace8"
            android:layout_marginRight="@dimen/viewSpace8"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_goods_image"
            android:layout_margin="@dimen/viewSpace8"
            android:layout_toLeftOf="@+id/tv_goods_status"
            android:layout_toRightOf="@+id/iv_goods_image"
            android:text=""
            android:textSize="@dimen/textSizeBig" />

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_goods_sub_title"
            android:layout_margin="@dimen/viewSpace8"
            android:layout_toRightOf="@+id/iv_goods_image"
            android:text=""
            android:textColor="@color/color_red"
            android:textSize="@dimen/textSizeBig" />

        <TextView
            android:id="@+id/tv_goods_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_goods_image"
            android:layout_marginBottom="@dimen/viewSpace4"
            android:layout_marginLeft="@dimen/viewSpace8"
            android:layout_toRightOf="@+id/iv_goods_image"
            android:background="@drawable/shape_shop_list_sub_title"
            android:padding="@dimen/viewSpace4"
            android:text=""
            android:textColor="@color/color_red"
            android:textSize="@dimen/textSizeSmall"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_goods_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/viewSpace16"
            android:layout_marginTop="@dimen/viewSpace16"
            android:textColor="@color/color_red"
            android:text="" />
    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>