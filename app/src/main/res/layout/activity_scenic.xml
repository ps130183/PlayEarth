<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.km.rmbank.module.main.scenic.ScenicActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                app:banner_layout="@layout/banner_scenic"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.youth.banner.Banner>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_bg_scenic_tab_layout">

                <com.flyco.tablayout.CommonTabLayout
                    android:id="@+id/commonTabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    app:tl_indicator_bounce_enable="true"
                    app:tl_indicator_color="?attr/colorAccent"
                    app:tl_indicator_corner_radius="1.5dp"
                    app:tl_indicator_height="3dp"
                    app:tl_indicator_width="80dp"
                    app:tl_textBold="BOTH"
                    app:tl_textSelectColor="@color/textMainColor"
                    app:tl_textUnselectColor="@color/textSecondColor"
                    app:tl_textsize="@dimen/textSizeBig">

                </com.flyco.tablayout.CommonTabLayout>

            </FrameLayout>

        </RelativeLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolBarHeight"
            android:paddingLeft="0dp">


            <ImageView
                android:id="@+id/backImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_arrow_left_black_white"
                android:background="@drawable/shape_image_back"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/moreImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_more_white"
                android:background="@drawable/shape_image_back"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/viewSpace8"
                />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.CoordinatorLayout>

    <include layout="@layout/_default_divide_line"/>

    <FrameLayout
        android:id="@+id/scenicContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>
