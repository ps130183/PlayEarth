<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.km.rmbank.module.main.personal.account.withdraw.AddBankCardOneFragment">

    <include layout="@layout/_default_divide_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/viewSpace16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textSize="@dimen/textSizeContent"
                android:textColor="@color/text_color_block5"/>

            <TextView
                android:id="@+id/userPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textSize="@dimen/textSizeContent"
                android:textColor="@color/text_color_block24"
                android:layout_marginLeft="25dp"
                android:lines="1"
                android:text=""
                android:maxLength="11"
                />
        </LinearLayout>

        <include layout="@layout/_default_divide_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/smsCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="请输入验证码"
                android:textSize="@dimen/textSizeContent"
                android:textColor="@color/text_color_block24"
                android:lines="1"
                android:inputType="number"
                android:maxLength="6"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/send"
                android:paddingTop="@dimen/viewSpace8"
                android:paddingBottom="@dimen/viewSpace8"
                />

            <LinearLayout
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/viewSpace16">

                <View
                    android:layout_width="@dimen/divideLineHeight"
                    android:layout_height="match_parent"
                    android:background="@color/divide_color"
                    android:layout_marginRight="@dimen/viewSpace16"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvSmsCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重新发送"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/textSizeContent"
                    android:textColor="@color/text_color_block24"
                    />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/_default_divide_line"/>

    <Button
        android:id="@+id/nextStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeBig"
        android:background="@drawable/selector_btn_bg_default"
        android:layout_margin="@dimen/viewSpace16"
        />

</LinearLayout>
