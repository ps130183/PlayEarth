<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="109dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingLeft="14dp">

    <com.ps.glidelib.GlideImageView
        android:id="@+id/imageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_banner_2"
        android:scaleType="centerCrop"
        app:siv_radius="4dp"
        />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divideLineHeight0.5"
        android:layout_marginLeft="14dp"
        android:background="#e8e8e8"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clubName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="玩转地球爱眼俱乐部"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_block3"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/introduce"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="目前全国仅近视就占了6亿，玩转地球爱眼俱乐部玩转地球爱眼俱乐部玩转地球爱眼俱乐部"
            android:gravity="center_vertical"
            android:textColor="#888888"
            android:textSize="10sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/keppCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="853"
                android:textColor="#3285ff"
                android:textSize="10sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="#888888"
                android:textSize="10sp"
                />

            <View
                android:layout_width="14dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textColor="#3285ff"
                android:textSize="10sp"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:textColor="#888888"
                android:textSize="10sp"
                />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>