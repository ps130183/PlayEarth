<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="103dp"
    android:orientation="horizontal"
    android:padding="9dp"
    android:background="@color/white"
    android:gravity="center_vertical">
    
    <android.support.v7.widget.CardView
        android:layout_width="113dp"
        android:layout_height="78dp"
        app:cardCornerRadius="5dp">

        <com.ps.glidelib.GlideImageView
            android:id="@+id/informationImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <include layout="@layout/glide_image_load_progress"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/viewSpace8">

        <TextView
            android:id="@+id/actionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="活动名称"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color_block3"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/actionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="俱乐部简介俱乐部简介俱乐部简介俱乐部简介"
            android:textColor="@color/text_color_block8"
            android:textSize="10sp"
            android:maxLines="2"
            android:lines="2"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/personNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="853"
                android:textColor="#3285ff"
                android:textSize="10sp"
                android:layout_marginRight="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人已浏览"
                android:textColor="#888888"
                android:textSize="10sp"
                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>