<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/viewSpace16">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/viewSpace8">
        <com.ps.glidelib.GlideImageView
            android:id="@+id/iv_user_portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_default_protrait"
            android:scaleType="centerCrop"
            app:siv_shape_type="circle"
            android:layout_marginRight="@dimen/viewSpace8"
            />

        <TextView
            android:id="@+id/tv_user_nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="玩转地球-松哥"
            android:textSize="@dimen/textSizeContent"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/textBlueColor"
            android:layout_toRightOf="@+id/iv_user_portrait"
            android:layout_marginTop="@dimen/viewSpace4"
            />

        <TextView
            android:id="@+id/tv_release_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25分钟前发布"
            android:textSize="@dimen/textSizeSmall"
            android:layout_toRightOf="@+id/iv_user_portrait"
            android:layout_alignBottom="@+id/iv_user_portrait"
            android:layout_below="@+id/tv_user_nick_name"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_forum_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="王者峡谷干围堵鲁班谁去？"
        android:textSize="@dimen/textSizeBig"
        android:textColor="@color/textMainColor"/>

    <TextView
        android:id="@+id/tv_forum_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="听说王者峡谷有个小鲁班，可牛逼了。带着个耳机子整天比比比，想找几个肉一起去埋伏丫一顿，干死他。"
        android:layout_marginTop="@dimen/viewSpace4"
        />
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_images_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/viewSpace4">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/icon_cf_item_comment"
            android:layout_toLeftOf="@+id/tv_comment"
            />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(12)"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/iv_praise"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/icon_cf_item_like_unpress"
            android:layout_toLeftOf="@+id/tv_praise" />
        <TextView
            android:id="@+id/tv_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(10)"
            android:gravity="center"
            android:layout_toLeftOf="@+id/iv_comment"
            android:layout_marginRight="@dimen/viewSpace8"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divideLineHeight"
        android:background="@color/divideLineColor"
        android:layout_marginTop="@dimen/viewSpace4"
        android:layout_marginBottom="@dimen/viewSpace8"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_forum_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_more_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看全部评价>>>"
        android:textColor="@color/textBlueColor"
        android:layout_marginTop="@dimen/viewSpace4"
        />


</LinearLayout>