<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.km.rmbank.module.main.personal.profession.ProfessionIntroduceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/profession_introduce"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="为什么要认证职业身份？"
            android:textSize="16sp"
            android:textColor="@color/text_color_block1"
            android:gravity="center"
            android:padding="@dimen/viewSpace16"
            android:background="@color/white"
            />

        <include layout="@layout/_default_divide_line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profession_introduce"
            android:textSize="14sp"
            android:textColor="@color/text_color_block24"
            android:padding="@dimen/viewSpace16"
            android:background="@color/white"
            android:lineSpacingMultiplier="1.4"
            />

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即认证"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_margin="@dimen/viewSpace16"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_btn_bg_default"
        android:onClick="toIdentification"/>


</RelativeLayout>
