<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.km.rmbank.module.main.payment.PayContractsActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="亲爱的玩家"
        android:textSize="13sp"
        android:padding="@dimen/viewSpace16"
        android:lineSpacingMultiplier="1.5"
        android:textColor="@color/text_color_block8"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/viewSpace16"
        android:text="本次邀请人脉数12人"
        android:textSize="15sp"
        android:textColor="@color/text_color_block3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/viewSpace16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需支付金额(元)"
            android:textColor="@color/text_color_block3"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/text_color_block0"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.20"
                android:textColor="@color/text_color_block0"
                android:textSize="29sp"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付方式："
        android:padding="@dimen/viewSpace16"
        android:textColor="@color/text_color_block3"
        android:textSize="15sp"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/viewSpace16"
            android:paddingRight="@dimen/viewSpace16"
            android:paddingTop="@dimen/viewSpace8"
            android:paddingBottom="@dimen/viewSpace8">

            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/icon_pay_weixin"
                android:layout_marginRight="@dimen/viewSpace8"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textSize="@dimen/textSizeContent"
                android:textColor="@color/text_color_block1"
                android:layout_toRightOf="@+id/iv_weixin"
                android:layout_centerVertical="true"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/check_personal_contacts"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/viewSpace16"
            android:paddingRight="@dimen/viewSpace16"
            android:paddingTop="@dimen/viewSpace8"
            android:paddingBottom="@dimen/viewSpace8">

            <ImageView
                android:id="@+id/iv_alipay"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/icon_pay_alipay"
                android:layout_marginRight="@dimen/viewSpace8"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textSize="@dimen/textSizeContent"
                android:textColor="@color/text_color_block1"
                android:layout_toRightOf="@+id/iv_alipay"
                android:layout_centerVertical="true"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/check_personal_contacts"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即支付"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/viewSpace16"
        android:background="@drawable/selector_btn_bg_default"
        />
</LinearLayout>
