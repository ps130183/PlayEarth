<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <com.ps.glidelib.GlideImageView
        android:id="@+id/iv_venue_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        app:siv_shape_type="circle"
        android:layout_marginRight="@dimen/viewSpace8"/>


    <TextView
        android:id="@+id/tv_venue_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="唐人汇"
        android:textSize="15sp"
        android:textColor="@color/text_color_block1"
        android:layout_toRightOf="@+id/iv_venue_logo"
        android:layout_marginTop="@dimen/viewSpace8"
        />

    <TextView
        android:id="@+id/tv_venue_type"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="下午茶"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/viewSpace4"
        android:paddingRight="@dimen/viewSpace4"
        android:layout_toRightOf="@+id/tv_venue_name"
        android:layout_marginLeft="@dimen/viewSpace16"
        android:background="@drawable/shape_bg_blue_corner_3"
        android:layout_alignBaseline="@+id/tv_venue_name"/>

    <TextView
        android:id="@+id/tv_venue_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请时间：2018.06.20 10:30 - 2018.06.21 16:00"
        android:textSize="13sp"
        android:textColor="@color/text_color_blocka"
        android:layout_toRightOf="@+id/iv_venue_logo"
        android:layout_alignBottom="@+id/iv_venue_logo"
        android:layout_marginBottom="@dimen/viewSpace8"
        />


    <com.ps.glidelib.GlideImageView
        android:id="@+id/status"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/icon_venue_passed"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
