<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_select_venue_sit_ok"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/viewSpace8">

        <com.ps.glidelib.GlideImageView
            android:id="@+id/venue_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/venue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="唐人汇"
            android:textColor="@color/text_color_block1"
            android:textSize="15sp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/venue_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/details"
                android:text="占地300平 容纳300人"
                android:textColor="@color/text_color_block8"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情 >>"
                android:textSize="13sp"
                android:textColor="@color/text_color_red"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </LinearLayout>




</RelativeLayout>