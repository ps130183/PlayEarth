<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/tv_user_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是昵称"
            android:textSize="@dimen/textSizeBig"
            android:textColor="@color/textMainColor"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/card_portrait"
            android:layout_marginLeft="@dimen/viewSpace8"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/card_portrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="@dimen/viewSpace8"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/iv_user_portrait"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
        </android.support.v7.widget.CardView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_chevron_right_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/viewSpace8"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_referrer_man"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="由15631707132邀请"
        android:textSize="@dimen/textSizeSmall"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/viewSpace4"
        android:gravity="right"
        android:background="@color/divideLineColor"
        />
</LinearLayout>
