<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_user_portrait"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_user_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是昵称"
                android:textSize="@dimen/textSizeContent"
                android:textColor="@color/text_color_block1"
                android:layout_marginLeft="@dimen/viewSpace8"
                />

            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来源：手机通讯录"
                android:textSize="@dimen/textSizeContent"
                android:textColor="@color/text_color_blocka"
                android:layout_marginLeft="@dimen/viewSpace8"
                />
        </LinearLayout>



        <com.ps.glidelib.GlideImageView
            android:id="@+id/iv_user_portrait"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            app:siv_shape_type="circle"
            android:layout_marginLeft="@dimen/viewSpace8"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_arrow_right_gray"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>
