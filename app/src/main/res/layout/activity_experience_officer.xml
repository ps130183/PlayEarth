<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divide_color"
    tools:context="com.km.rmbank.module.main.appoint.AppointAfternoonTeaActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/applyAction">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.ps.glidelib.GlideImageView
                android:id="@+id/headerImageView"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:src="@mipmap/banner_experience_officer"
                android:layout_marginBottom="9dp"
                />

            <TextView
                android:id="@+id/actionName"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@color/white"
                android:text="199元体验官活动"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/text_color_block0"
                />
            <include layout="@layout/_default_divide_line"/>

            <TextView
                android:id="@+id/invitation_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:paddingBottom="9dp"
                android:background="@color/white"
                android:text="@string/experience_officer_letter"
                android:textSize="12sp"
                android:textColor="@color/text_color_block3"
                android:lineSpacingMultiplier="1.4"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@color/white"
                android:text="活动权益"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/text_color_block0"
                />

            <include layout="@layout/_default_divide_line"/>

            <TextView
                android:id="@+id/actionContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:background="@color/white"
                android:text="@string/experience_officer_rights"
                android:textSize="12sp"
                android:textColor="@color/text_color_block3"
                android:lineSpacingMultiplier="1.5"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="9dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/applyAction"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#cc000000"
        android:layout_alignParentBottom="true"
        android:text="立即分享"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:onClick="clickApplyAction"/>

</RelativeLayout>
