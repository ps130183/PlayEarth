<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.km.rmbank.module.main.personal.integral.MyIntegralActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/color_blue3"
        android:paddingBottom="@dimen/viewSpace16">

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/viewSpace32"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_balance"
            android:layout_marginLeft="@dimen/viewSpace4"
            android:layout_toRightOf="@id/tv_balance"
            android:text="个"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeBig"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_balance"
            android:layout_alignParentBottom="true"
            android:text="小积分 大用途 专属乐不停"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeBig" />

        <TextView
            android:id="@+id/tv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/viewSpace16"
            android:layout_marginTop="@dimen/viewSpace16"
            android:text="积分规则"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeBig"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/viewSpace16"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/viewSpace32">>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/viewSpace8"
            android:paddingTop="@dimen/viewSpace8">

            <TextView
                android:id="@+id/tv_account_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分明细"
                android:textSize="@dimen/textSizeHuge" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divideLineHeight"
            android:background="@color/divideLineColor" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>

