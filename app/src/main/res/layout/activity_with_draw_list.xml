<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_with_draw_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.km.rmbank.module.main.personal.account.withdraw.WithDrawListActivity">

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请绑定持卡人的银行卡"
        style="@style/BackGauge"

        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_add_account"
        android:layout_below="@+id/tv_hint">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/btn_add_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccent"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/viewSpace8"
        android:layout_margin="@dimen/viewSpace16">
        <TextView
            android:id="@+id/tv_new_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_add_black_48px"
            android:text="新建账户"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/textSizeBig"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>


</RelativeLayout>
