<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.km.rmbank.module.main.personal.contacts.ContactsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/linkManRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/divide_color"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/contactsRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>




        <com.km.rmbank.customview.LetterSideBar
            android:id="@+id/letterSide"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            app:textSize="13sp"
            app:selectTextColor="#fb9035"
            app:unSelectTextColor="@color/text_color_block3"
            app:selectTextBackgroundColor="#00ffffff"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/viewSpace16"
            android:layout_marginBottom="@dimen/viewSpace16"/>

        <com.ruffian.library.RTextView
            android:id="@+id/letterHint"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:background_normal="#99000000"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            app:corner_radius="40dp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>



    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divideLineHeight"
        android:background="@color/divide_color"
        android:layout_above="@+id/ll_btn"/>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:text="取消"
            android:textColor="@color/text_color_block8"
            android:textSize="19sp"
            android:gravity="center"
            android:background="@color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/invitation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="一键邀请"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:gravity="center"
            android:background="@color/colorAccent"/>

    </LinearLayout>
</RelativeLayout>
