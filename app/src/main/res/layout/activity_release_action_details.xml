<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context="com.km.rmbank.module.main.personal.book.ReleaseActionDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_margin="@dimen/viewSpace16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/viewSpace16">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textColor="#74D4C7"
                    android:textSize="18sp" />

                <WebView
                    android:id="@+id/reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/viewSpace8"
                    android:layout_marginTop="@dimen/viewSpace8" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divideLineHeight"
                    android:background="@color/divide_color"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/viewSpace8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动主题："
                        android:textSize="14sp"
                        android:textColor="@color/text_color_block24"
                        android:layout_marginRight="10dp"
                        />

                    <TextView
                        android:id="@+id/action_title"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_block24"
                        android:paddingLeft="@dimen/viewSpace8"
                        android:gravity="center_vertical"
                        android:maxLines="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/viewSpace8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动场地："
                        android:textSize="14sp"
                        android:textColor="@color/text_color_block24"
                        android:layout_marginRight="10dp"
                        />

                    <TextView
                        android:id="@+id/action_venue"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_block24"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:paddingLeft="@dimen/viewSpace8"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/viewSpace8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="详细地址："
                        android:textSize="14sp"
                        android:textColor="@color/text_color_block24"
                        android:layout_marginRight="10dp"
                        />

                    <TextView
                        android:id="@+id/action_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_block24"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:paddingLeft="@dimen/viewSpace8"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/viewSpace8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动时间："
                        android:textSize="14sp"
                        android:textColor="@color/text_color_block24"
                        android:layout_marginRight="10dp"
                        />

                    <TextView
                        android:id="@+id/action_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_block24"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:paddingLeft="@dimen/viewSpace8"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:padding="@dimen/viewSpace8">-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:text="活动图片："-->
                        <!--android:textSize="14sp"-->
                        <!--android:textColor="@color/text_color_block24"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:paddingTop="@dimen/viewSpace8"-->
                        <!--/>-->

                    <!--<com.ps.mrcyclerview.MRecyclerView-->
                        <!--android:id="@+id/imageRecycler"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:minHeight="100dp"-->
                        <!--app:lmType="grid"-->
                        <!--app:spanCount="3"-->
                        <!--app:dividerColor="@color/white">-->

                    <!--</com.ps.mrcyclerview.MRecyclerView>-->

                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/viewSpace8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="活动内容："
                        android:textSize="14sp"
                        android:textColor="@color/text_color_block24"
                        android:layout_marginRight="10dp"
                        android:paddingTop="@dimen/viewSpace8"
                        />

                    <TextView
                        android:id="@+id/text_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_block24"
                        android:minHeight="40dp"
                        android:padding="@dimen/viewSpace8"
                        android:gravity="top"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/resverRelease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重新发布"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/selector_btn_bg_shadow"
            android:layout_margin="@dimen/viewSpace16"
            android:onClick="resverRelease"
            android:visibility="gone"/>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
