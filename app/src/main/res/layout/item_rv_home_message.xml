<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/viewSpace8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_message_content"
        android:paddingLeft="@dimen/viewSpace16"
        android:paddingRight="@dimen/viewSpace16"
        android:paddingTop="@dimen/viewSpace16"
        android:paddingBottom="@dimen/viewSpace16">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.ruffian.library.RTextView
                android:id="@+id/messageType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动"
                android:textSize="@dimen/textSizeContent"
                android:textColor="@color/white"
                app:background_normal="#f7bd00"
                app:corner_radius="@dimen/viewSpace4"
                android:paddingTop="@dimen/viewSpace2"
                android:paddingBottom="@dimen/viewSpace2"
                android:paddingLeft="@dimen/viewSpace8"
                android:paddingRight="@dimen/viewSpace8"
                android:layout_marginRight="@dimen/viewSpace8"/>
            <TextView
                android:id="@+id/tv_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是消息标题"
                android:textSize="@dimen/textSizeBig"
                android:textColor="@color/textMainColor"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-02-21"
            android:layout_marginTop="@dimen/viewSpace8"
            android:layout_marginBottom="@dimen/viewSpace8"
            />

        <include layout="@layout/_default_divide_line"/>
        <TextView
            android:id="@+id/tv_message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="恭喜您成为体验式会员，快去发布您的商品吧～"
            android:textColor="@color/textMainColor"
            android:minLines="1"
            android:inputType="textMultiLine"
            android:layout_marginTop="@dimen/viewSpace8"
            />
    </LinearLayout>

</FrameLayout>