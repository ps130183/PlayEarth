<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_details"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="com.km.rmbank.module.personal.order.detail.OrderDetailsActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/viewSpace16"
            android:paddingTop="@dimen/viewSpace8"
            android:paddingBottom="@dimen/viewSpace8">

            <ImageView
                android:id="@+id/tv_protrait"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_shop"
                />
            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海参大礼包 1.3kg 超值狂送"
                android:layout_toRightOf="@+id/tv_protrait"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/viewSpace8"
                android:drawableRight="@mipmap/ic_chevron_right_black_24dp"
                android:gravity="center|left"
                />

            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_red"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/viewSpace16"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/defaultBackground"
            android:paddingRight="@dimen/viewSpace16">

            <ImageView
                android:id="@+id/iv_goods"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/viewSpace16"
                />

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toRightOf="@id/iv_goods"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            style="@style/BackGauge"
            android:paddingRight="@dimen/viewSpace16"
            android:paddingTop="@dimen/viewSpace8"
            android:paddingBottom="@dimen/viewSpace8"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共 "
                android:textColor="@color/textMainColor"
                />
            <TextView
                android:id="@+id/tv_goods_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/textMainColor"
                android:textSize="@dimen/textSizeHuge"
                />
            <TextView
                android:id="@+id/tv_money_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 件商品  需付款：¥ "
                android:textColor="@color/textMainColor"
                />
            <TextView
                android:id="@+id/tv_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/textMainColor"
                android:textSize="@dimen/textSizeHuge"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 元"
                android:textColor="@color/textMainColor"
                />


        </LinearLayout>
        <include layout="@layout/_default_divide_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/viewSpace16"
            android:paddingRight="@dimen/viewSpace16"
            android:paddingTop="@dimen/viewSpace8"
            android:paddingBottom="@dimen/viewSpace8"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号："
                />
            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123456"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/defaultBackground"
            android:paddingRight="@dimen/viewSpace16"
            android:paddingLeft="@dimen/viewSpace16"
            android:paddingTop="@dimen/viewSpace16"
            android:paddingBottom="@dimen/viewSpace16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/viewSpace4"
                android:paddingBottom="@dimen/viewSpace4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人："
                    />
                <TextView
                    android:id="@+id/tv_receiver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/viewSpace4"
                android:paddingBottom="@dimen/viewSpace4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话："
                    />
                <TextView
                    android:id="@+id/tv_receiver_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/viewSpace4"
                android:paddingBottom="@dimen/viewSpace4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址："
                    />
                <TextView
                    android:id="@+id/tv_receiver_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_express"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/_default_divide_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/viewSpace16"
                android:paddingRight="@dimen/viewSpace16"
                android:paddingTop="@dimen/viewSpace16"
                android:paddingBottom="@dimen/viewSpace16"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递公司："
                    android:textColor="@color/textMainColor"
                    android:textSize="@dimen/textSizeBig"
                    />
                <EditText
                    android:id="@+id/et_express_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/textGrayColor"
                    android:textSize="@dimen/textSizeContent"
                    />
            </LinearLayout>

            <include layout="@layout/_default_divide_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/viewSpace16"
                android:paddingRight="@dimen/viewSpace16"
                android:paddingTop="@dimen/viewSpace16"
                android:paddingBottom="@dimen/viewSpace16"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递单号："
                    android:textColor="@color/textMainColor"
                    android:textSize="@dimen/textSizeBig"
                    />
                <EditText
                    android:id="@+id/et_express_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/textGrayColor"
                    android:textSize="@dimen/textSizeContent"
                    />
            </LinearLayout>
        </LinearLayout>


        <include layout="@layout/_default_divide_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/viewSpace8">
            <Button
                android:id="@+id/btn_action"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="去支付"
                style="@style/Personal.User.Order.Button"
                android:layout_margin="@dimen/viewSpace8"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
