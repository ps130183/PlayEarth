<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/BackGauge"
        >
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_shopcart_check"
            android:layout_marginRight="@dimen/viewSpace4"
            />
        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的店铺"
            android:textColor="@color/textMainColor"
            android:textSize="@dimen/textSizeContent"
            android:drawableRight="@mipmap/ic_chevron_right_black_24dp"
            android:gravity="center"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
    </android.support.v7.widget.RecyclerView>
    <include layout="@layout/_default_divide_line"/>
    <RelativeLayout
        android:id="@+id/rl_freight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/viewSpace16"
        android:paddingRight="@dimen/viewSpace16"
        android:paddingTop="@dimen/viewSpace8"
        android:paddingBottom="@dimen/viewSpace8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费价格："
            android:textSize="@dimen/textSizeBig"
            android:textColor="@color/textMainColor"
            />

        <TextView
            android:id="@+id/tv_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ 12.0 元"
            android:textSize="@dimen/textSizeBig"
            android:textColor="@color/textMainColor"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>