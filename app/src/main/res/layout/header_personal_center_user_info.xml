<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingTop="35dp"
    android:paddingLeft="15dp"
    android:paddingBottom="20dp"
    android:paddingRight="35dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">


    <com.ps.glidelib.GlideImageView
        android:id="@+id/userPortrait"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@mipmap/icon_default_protrait"
        app:siv_shape_type="circle"
        android:layout_marginTop="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17sp"
                android:textColor="@color/text_color_block1"
                />

            <TextView
                android:id="@+id/realPosition"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="未认证"
                android:textSize="12sp"
                android:textColor="#f91413"
                android:background="@drawable/shape_bg_white_border_corner_2"
                android:paddingLeft="@dimen/viewSpace4"
                android:paddingRight="@dimen/viewSpace4"
                android:gravity="center"
                android:layout_marginLeft="@dimen/viewSpace4"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/userPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IT互联网|UI设计"
                android:textSize="@dimen/textSizeSmall"
                />

            <TextView
                android:id="@+id/userCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="玩转地球商旅学苑（北京）文化发展有限公司"
                android:textSize="@dimen/textSizeSmall"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>