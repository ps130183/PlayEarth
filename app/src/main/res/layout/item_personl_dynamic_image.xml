<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2018-03-09 10:25"
        android:textSize="13sp"
        android:textColor="@color/text_color_block8"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今天玩转地球爱眼俱乐部成立大会让我受益匪浅今天玩转地球爱眼俱乐部成立大会让我受益匪浅今天玩转地球爱眼俱乐部成立大会让我受益匪浅"
        android:textSize="15sp"
        android:textColor="@color/text_color_block3"
        android:layout_marginBottom="16dp"
        android:maxLines="2"
        android:ellipsize="end"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/imageRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_gravity="right"
        android:gravity="center_vertical">

        <com.ruffian.library.RTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  0"
            android:layout_marginRight="25dp"
            android:textSize="14sp"
            android:textColor="@color/text_color_block5"
            app:icon_src_normal="@mipmap/icon_php_dynamic_like"
            app:icon_height="20dp"
            app:icon_width="20dp"/>

        <com.ruffian.library.RTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  0"
            android:textSize="14sp"
            android:textColor="@color/text_color_block5"
            app:icon_src_normal="@mipmap/icon_php_dynamic_comment"
            app:icon_height="20dp"
            app:icon_width="20dp"
            app:icon_direction="left"
            />

    </LinearLayout>

</com.rey.material.widget.LinearLayout>