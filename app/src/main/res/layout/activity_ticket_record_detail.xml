<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.km.rmbank.module.main.personal.ticket.TicketRecordDetailActivity">

    <TextView
        android:id="@+id/scenicName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="活动名称"
        android:textColor="@color/text_color_block1"
        android:textSize="15sp"
        android:padding="@dimen/viewSpace16"
        android:background="@color/white"
        />

    <include layout="@layout/_default_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/viewSpace8"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/viewSpace8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参加人数：" />

            <TextView
                android:id="@+id/personNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="3"
                android:textColor="@color/text_color_block24"
                android:textSize="@dimen/textSizeContent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/viewSpace8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费金额：" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="300元"
                android:textColor="@color/text_color_block24"
                android:textSize="@dimen/textSizeContent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/viewSpace8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用时间：" />

            <TextView
                android:id="@+id/useDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2018-09-23"
                android:textColor="@color/text_color_block24"
                android:textSize="@dimen/textSizeContent" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
