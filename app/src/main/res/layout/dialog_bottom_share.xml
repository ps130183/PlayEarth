<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享"
        android:textSize="@dimen/textSizeBig"
        android:textColor="@color/textMainColor"
        android:gravity="center"
        android:paddingTop="@dimen/viewSpace16"
        android:paddingBottom="6dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="6dp">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/shareWeiXin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_share_weixin"
                android:layout_gravity="center"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/sharePengyou"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_share_pengyouquan"
                android:layout_gravity="center"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/shareXiaZai"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_share_xiazia"
                android:layout_gravity="center"
                />
        </FrameLayout>
    </LinearLayout>
    <include layout="@layout/_default_divide_line"/>
    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:padding="@dimen/viewSpace16"
        android:gravity="center"
        android:textSize="@dimen/textSizeBig"/>
</LinearLayout>