<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#00ffffff">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shareRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/viewSpace16"
        android:layout_marginRight="@dimen/viewSpace16"
        android:background="@drawable/shape_custom_share_background">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="取消"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="@dimen/viewSpace16"
        android:layout_marginRight="@dimen/viewSpace16"
        android:layout_marginTop="@dimen/viewSpace8"
        android:layout_marginBottom="@dimen/viewSpace8"
        android:background="@drawable/shape_custom_share_background"
        />
</LinearLayout>