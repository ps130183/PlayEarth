<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.km.rmbank.module.main.appoint.AppointFragment">


    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="约么"
            android:textColor="@color/text_color_block1"
            android:layout_gravity="center"
            android:textSize="@dimen/textSizeHuge"
            />

    </android.support.v7.widget.Toolbar>
    <include layout="@layout/_default_divide_line"/>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/actionTypes"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        app:tl_indicator_color="?attr/colorAccent"
        app:tl_indicator_height="1.5dp"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_padding="15dp"
        app:tl_textsize="15sp"
        app:tl_textSelectColor="?attr/colorAccent"
        app:tl_textUnselectColor="#888888"
        app:tl_underline_color="#1A000000"
        app:tl_underline_height="1dp"/>
    <include layout="@layout/_default_divide_line"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
